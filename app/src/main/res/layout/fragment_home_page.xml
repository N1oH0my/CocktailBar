<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_home_page"
    tools:context=".presentation.Fragments.HomePageFragment"

    >

    <ScrollView
        android:id="@+id/id_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:background="#00FFFFFF"
        android:foregroundGravity="bottom|center"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/id_linear_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/id_new_item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/start_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/didact_gothic"
                android:gravity="center"
                android:text="@string/My_cocktails"
                android:textSize="47sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="94dp"
                android:fontFamily="@font/didact_gothic"
                android:gravity="center"
                android:text="@string/Add_your_first_cocktail_here"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arrow_icon" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/id_add_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:backgroundTint="#4B97FF"
            android:contentDescription="@string/app_name"
            android:fontFamily="@font/didact_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="+"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:cornerRadius="150dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>