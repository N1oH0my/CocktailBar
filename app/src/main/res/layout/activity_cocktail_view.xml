<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_delete_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.View.cocktail_view_activity">


    <LinearLayout
        android:id="@+id/id_linear_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/id_item_img_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            app:cardCornerRadius="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/id_item_img"
                android:layout_width="300dp"
                android:layout_height="326dp"

                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/start_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/id_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/didact_gothic"
            android:gravity="center"
            android:text="Title"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/id_desccription_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/didact_gothic"
            android:gravity="center"
            android:text="To make this homemade pink lemonade, simply combine all the ingredients in a pitcher."
            android:textSize="19sp"
            android:inputType="textMultiLine"
            />

        <TextView
            android:id="@+id/id_recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/didact_gothic"
            android:gravity="center"
            android:text="To make this homemade pink \nlemonade, simply combine \nall the ingredients in a pitcher."
            android:textSize="19sp"
            android:inputType="textMultiLine"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/id_delete_button"
            android:layout_width="329dp"
            android:layout_height="62dp"
            android:layout_marginBottom="15dp"

            android:backgroundTint="#C48C0F0F"
            android:fontFamily="@font/didact_gothic"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            app:cornerRadius="23dp" />

        <ImageView
            android:id="@+id/id_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/edit_frame_btn" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>